datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  password String
  todo Todo[]
}

model Todo{
  id Int @default(autoincrement()) @id
  title String
  done Boolean
  user User @relation(fields: [userId], references: [id])
  userId Int
}
